<div class="modal fade hide"
     id="Shutdown-modal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="Shutdown-modal"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="title-icon">
                    <i class="fas fa-power-off fa-2x mr-3"></i>
                    <h5 class="modal-title" id="selectLaneLongTitle">Shut down host device</h5>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul id="" class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                                    <a class="btn-shutdown" href="#">Shut down</a>
                                    <div class="btn-group pull-right" role="group" aria-label="Basic example2">
                                        <a href="#" target="_blank" class="btn btn-primary btn-md btn-shutdown" role="button" > <i class="fas fa-power-off fa-lg"></i></a>
                                    </div>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                                    <a class="btn-restart" href="#">Restart</a>
                                    <div class="btn-group pull-right" role="group" aria-label="Basic example2">
                                        <a href="#" target="_blank" class="btn btn-primary btn-md btn-restart" role="button"> <i class="fas fa-undo fa-lg"></i></a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-blue" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>