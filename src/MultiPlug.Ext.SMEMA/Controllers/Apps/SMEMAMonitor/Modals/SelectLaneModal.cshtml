
@functions{
    string Lane(string theGuid, string theMachineName, string theLaneName)
    {
        return @"<li class=""list-group-item d-flex justify-content-between align-items-center list-group-item-action"">" +
            @"<a class="""" href=""/apps/multiplug.ext.SMEMA/IPC-SMEMA-9851-Monitor/?id=" + theGuid + @""">" + theMachineName + " / " + theLaneName + "</a>" +
            @"<div class=""btn-group pull-right"" role=""group"" aria-label=""Basic example2"">" +
            @"<a href=""/apps/multiplug.ext.SMEMA/IPC-SMEMA-9851-Monitor/?id=" + theGuid + @""" class=""btn btn-primary btn-md "" target=""_blank"" role=""button"" > <i class=""fas fa-external-link-alt fa-lg""></i></a>" +
            @"<a href=""/apps/multiplug.ext.SMEMA/IPC-SMEMA-9851-Monitor/?id=" + theGuid + @""" class=""btn btn-primary btn-md "" role=""button"" > <i class=""fas fa-arrow-right fa-lg""></i></a>" +
            @"</div></li>";
    }
}

<!-- Modal -->
<!-- Modal -->
<div class="modal fade hide"
     id="selectLaneLong"
     tabindex="-1"
     role="dialog"
     aria-labelledby="selectLaneLongTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="title-icon">
                    <i class="fas fa-stream fa-2x mr-3"></i>
                    <h5 class="modal-title" id="selectLaneLongTitle">Select Lane</h5>

                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul id="lane-list" data-lane-guid="@Model.Extension.Model.LaneGuid" class="list-group">
                                @foreach (var x in Model.Extension.Model.Lanes)
                                { @Raw(Lane( x.Guid, x.MachineName, x.LaneName ) ) }
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>