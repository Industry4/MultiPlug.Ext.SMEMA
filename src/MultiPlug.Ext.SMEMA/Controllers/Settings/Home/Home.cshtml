@model MultiPlug.Base.Http.EdgeApp
<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded" autocomplete="off">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="@Raw(Model.Context.Paths.Home)"><img alt="SMEMA Logo" src="@Raw(Model.Context.Paths.Assets)images/SMEMA-small.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">SMEMA Lanes</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        @Include("MultiPlug.Ext.SMEMA.SMEMA_Settings_Navigation")

        <div class="row-fluid">
            <div class="box non-collapsible">

                <table id="lanesTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="span4">Lane ID</th>
                            <th class="span4">Machine</th>
                            <th class="span1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Lane in @Model.Extension.Model.Lanes)
                        {
                            <tr>
                                <td class="span4"><a href="@Raw(Model.Context.Paths.Home)lane/?id=@Lane.Guid">@Lane.LaneId</a></td>
                                <td class="span4"><a href="@Raw(Model.Context.Paths.Home)lane/?id=@Lane.Guid">@Lane.MachineId</a></td>
                                <td class="span4"><a class="btn btn-red btn-deletelane" href="@Raw(Model.Context.Paths.Home)lane/delete/?id=@Lane.Guid"><i class="icon-trash"></i></a></td>
                            </tr>
                        }

                        <tr>
                            <td class="span4"></td>
                            <td class="span4"></td>
                            <td class="span4"><button type="button" class="btn btn-green" id="btn-newlane"><i class="icon-plus"></i></button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script type="text/javascript" src="@Raw(Model.Context.Paths.Assets)js/lanes.js"></script>
</form>
