@model MultiPlug.Base.Http.EdgeApp

@functions
{
    string isConnected(bool theValue)
    {
        return (theValue) ? "<i class=\"icon-ok icon-large\"></i>" : "<i class=\"icon-remove icon-large\"></i>";
    }
    string isEnabled(bool? theValue)
    {
        return (theValue.Value) ? "checked" : "";
    }
}

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="Guid" value="@Model.Extension.Model.Guid">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span2">
                    <a style="line-height: 52px;" href="@Raw(Model.Context.Paths.Home)"><img alt="SMEMA Logo" src="@Raw(Model.Context.Paths.Assets)images/Smema-small.png"></a>
                </div>
                <div class="span8">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">SMEMA Board Available</p>
                </div>
                <div class="span2" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        @Include("MultiPlug.Ext.SMEMA.SMEMA_Settings_Navigation")

        <h3 class="box-header">Subscriptions</h3>
        <div class="box">
            <h4>SMEMA Good Board Available</h4>
            <div class="row-fluid">
                <div class="well">
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Subscription ID</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMABoardAvailableSubscriptionId" class="input-block-level mp-event-picker" type="text" value="@Model.Extension.Model.Properties.SMEMABoardAvailableSubscription.Id" />
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Available Value</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMABoardAvailableSubscriptionAvailableValue" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMABoardAvailableSubscription.Value">
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Connected</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    @Raw(isConnected(Model.Extension.Model.Properties.SMEMABoardAvailableSubscription.Connected))
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Always Available</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input type="checkbox" name="SMEMABoardAvailableAlways" value="true" @isEnabled(@Model.Extension.Model.Properties.SMEMABoardAvailableAlways)>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4>SMEMA Bad Board Available</h4>
            <div class="row-fluid">
                <div class="well">
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Subscription ID</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAFailedBoardAvailableSubscriptionId" class="input-block-level mp-event-picker" type="text" value="@Model.Extension.Model.Properties.SMEMAFailedBoardAvailableSubscription.Id" />
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Available Value</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAFailedBoardAvailableSubscriptionAvailableValue" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMAFailedBoardAvailableSubscription.Value">
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Connected</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    @Raw(isConnected(Model.Extension.Model.Properties.SMEMAFailedBoardAvailableSubscription.Connected))
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Always Available</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input type="checkbox" name="SMEMAFailedBoardAvailableAlways" value="true" @isEnabled(@Model.Extension.Model.Properties.SMEMAFailedBoardAvailableAlways)>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h4>SMEMA Flip Board</h4>
            <div class="row-fluid">
                <div class="well">
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Subscription ID</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAFlipBoardSubscriptionId" class="input-block-level mp-event-picker" type="text" value="@Model.Extension.Model.Properties.SMEMAFlipBoardSubscription.Id" />
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Flip Value</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAFlipBoardSubscriptionFlipValue" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMAFlipBoardSubscription.Value">
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Connected</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    @Raw(isConnected(Model.Extension.Model.Properties.SMEMAFlipBoardSubscription.Connected))
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Always Flip</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input type="checkbox" name="SMEMAFlipBoardAlways" value="true" @isEnabled(@Model.Extension.Model.Properties.SMEMAFlipBoardAlways)>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h3 class="box-header">Events</h3>
        <div class="box">
            <h4>SMEMA Machine Ready to Receive</h4>
            <div class="row-fluid">
                <div class="well">
                    <div class="row-fluid">

                        <div class="span3">
                            <div class="row-fluid"><div class="span12">Event ID</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAMachineReadyEventId"  autocomplete="off" class="input-block-level" type="text" placeholder="Event ID" value="@Model.Extension.Model.Properties.SMEMAMachineReadyEvent.Id">
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="span12">
                                <div class="row-fluid"><div class="span12">Event Description</div></div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <input name="SMEMAMachineReadyEventDescription" autocomplete="off" class="input-block-level" type="text" placeholder="Description" value="@Model.Extension.Model.Properties.SMEMAMachineReadyEvent.Description" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="span2">
                            <div class="row-fluid"><div class="span12">Event Subject</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAMachineReadyEventSubject" autocomplete="off" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMAMachineReadyEvent.Subjects[0]">
                                </div>
                            </div>
                        </div>

                        <div class="span2">
                            <div class="row-fluid"><div class="span12">Machine Ready</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAMachineReadyEventHighValue" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMAMachineReadyEvent.HighValue">
                                </div>
                            </div>
                        </div>

                        <div class="span2">
                            <div class="row-fluid"><div class="span12">Machine Not Ready</div></div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <input name="SMEMAMachineReadyEventLowValue" class="span12" type="text" value="@Model.Extension.Model.Properties.SMEMAMachineReadyEvent.LowValue">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>