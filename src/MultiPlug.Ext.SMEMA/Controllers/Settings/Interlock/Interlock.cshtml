        if (InterfaceUICheckbox.checked) {
            document.getElementById("InterfaceRESTCheckbox").checked = true;
        }
    }

    var InterfaceRESTCheckbox = document.getElementById("InterfaceRESTCheckbox");
    InterfaceRESTCheckbox.onclick = function (event) {
